		padding 2rem 1rem 2rem 4rem	

.people
	list-style none
	margin 0 !important
	.person 
		position: relative;
		transform: translateZ(0);
		user-select: none;
		margin-bottom .5rem
		&.drivers
			.person-info
				&-name
					margin: 10% 0 0;
		&:hover 
			.person-info 
				opacity: 1;
		img 
			display: block;
			max-width: 100%;
		&-info 
			//opacity: 0;
			//position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background-color: rgba(255,255,255,0.9);
			transition-property: opacity;
			transition-duration: 0.2s;
			transition-timing-function: cubic-bezier(0.64, 0.135, 0.235, 1);
			&-name 
				text-align: center;
				line-height 13px
				margin 0px //margin: 50% 0 0;
				font-size: 13px;
			&-title
				margin-top 5px
				text-align: center;
				//white-space: nowrap;
				line-height 13px
				font-size: 13px;
				display: block;
				color: #afb1b4;
				font-size: 0.7em;
				font-weight: 700;
				letter-spacing: 1.4px;
				text-transform: uppercase;
			&-contact
				text-align: center;
				line-height 13px
				font-size: 13px;
				display: block;
